    <groupId>org.apache.dubbo</groupId>
    <artifactId>universe-dependencies-bom</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <name>universe-dependencies-bom</name>
    <description>universe dependencies BOM</description>
    <url>https://github.com/yoga0521/universe</url>
    <inceptionYear>2022</inceptionYear>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <properties>
        <spring.version>5.3.19.RELEASE</spring.version>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <!-- log -->
        <slf4j.version>1.7.36</slf4j.version>
        <revision>0.0.1-SNAPSHOT</revision>
